                    <th>Количество проанализированных уроков</th>
                </tr>
            </thead>
            <tbody>

                {{#if methodistData}}
                {{#each methodistData}}
                <tr>
                    <td>{{increment @index}}</td>
                    <td>{{surname}} {{firstname}} {{patronymic}}</td>
                    <td>{{title_position}}</td>
                    <td>{{disciplines}}</td>
                    <td>{{record_count}}</td>
                    <td>{{title_discipline}}</td>
                    <td>{{record_count}}</td>
                    <td>
                        <a href="/admin/methodist/profile/{{id_user}}" class="rate_button button">Открыть</a>
                    </td>
                </tr>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
        </section>
        <!-- END BLOCK-->

        <button id="myBtn">Сформировать</button>
    </div>



